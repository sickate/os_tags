.page-header
  %h3 Projects
  - @projects.each do |project|
    %a{href: "#{project_url(project)}"}
      = project.name
    %br

.page-header
  %h4 Skills
  .well
    %h4{:style => "color: #515151;"} Tap skills for details
    #skillcloud{:style => "height: 400px;"}

:javascript
  $(function() {
    var skill_array = JSON.parse('#{@skill_array.to_json}');
    $("#skillcloud").jQCloud(skill_array);
  });

-#.page-header
  %h3 All Groups
-#.row
  .col-sm-12
    %table.table
      %thead
        %tr
          %th Name
          %th{:colspan => "3"}
      %tbody
        - @groups.each do |group|
          %tr
            %td= group.name
            %td= link_to 'Show', group
            %td= link_to 'Edit', edit_group_path(group)
            %td= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }
    %br/
    = link_to 'New Group', new_group_path
