.page-header
  %h3 Group information
.row
  .col-sm-12
    %p#notice= notice
    %h4 Group #{@group.name} Members:
    %table.table
      %thead
        %tr
          %th Name
          %th Email
          %th Description
          %th Tags
          %th{:colspan => "3"}
      %tbody
        - @group.people.each do |person|
          %tr
            %td= person.name
            %td= person.email
            %td= person.description
            %td= person.tag_list

    = link_to 'Edit', edit_group_path(@group)
    |
    \#{link_to 'Back', groups_path}
