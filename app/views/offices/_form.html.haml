= form_for(@office) do |f|
  - if @office.errors.any?
    #error_explanation
      %h2
        = pluralize(@office.errors.count, "error")
        prohibited this office from being saved:
      %ul
        - @office.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :city_id
    %br/
    = f.number_field :city_id
  .field
    = f.label :group_id
    %br/
    = f.number_field :group_id
  .actions
    = f.submit
